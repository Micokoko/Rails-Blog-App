<h1>All Posts</h1>

<% @posts.each do |post| %>
  <h2><%= link_to post.title, post_path(post) %></h2>
  <p><%= post.content %></p>
  <%= link_to 'Edit', edit_post_path(post) %> |
  <%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>

<%= link_to 'New Post', new_post_path %>